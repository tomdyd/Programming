<UserControl x:Class="SpaceShooter.Virew.Player.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpaceShooter.Virew.Player"
             mc:Ignorable="d">
    <Canvas x:Name="mainCanvas">
        <Rectangle Canvas.Left="{Binding Position}" Height="40" Width="40">
            <Rectangle.Fill>
                <ImageBrush ImageSource="{Binding ShipUrl}" 
                            Stretch="Fill"
                            TileMode="Tile"  />
            </Rectangle.Fill>
        </Rectangle>
    </Canvas>
</UserControl> 
